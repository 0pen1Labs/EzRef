generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(uuid())
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt()
  clerkId       String     @unique
  email         String     @unique
  referralLinks RefLinks[]
}

model Form {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  title       String?  @db.Text
  description String?  @db.Text
  isFavorite  Boolean
  updatedAt   DateTime @updatedAt()
  ref         RefLinks @relation(fields: [refId], references: [id])
  refId       String   @unique
  formFields  Json
}

model RefLinks {
  id          String       @id @default(uuid())
  name        String?      @db.Text
  description String?      @db.Text
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt()
  domain      String       @db.Text
  status      Boolean?     @db.Boolean
  exp         DateTime?    @db.Timestamptz(3)
  formCode    String       @unique
  clerkId     String
  user        User         @relation(fields: [clerkId], references: [clerkId])
  Form        Form?
  response    Submission[]

  @@index([createdAt])
}

model Submission {
  id        String   @id @default(uuid())
  response  Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
  form      RefLinks @relation(fields: [formId], references: [id])
  formId    String   @unique
}
